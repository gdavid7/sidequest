# =============================================================================
# Sidequest Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# -----------------------------------------------------------------------------
# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# -----------------------------------------------------------------------------

# Public URL - safe to expose to client
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Anon key - safe to expose to client (RLS protects data)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service role key - NEVER expose to client!
# Only used in server actions for admin operations
# SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# -----------------------------------------------------------------------------
# Application Configuration  
# -----------------------------------------------------------------------------

# The base URL of your app (used for magic link redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

